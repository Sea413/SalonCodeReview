<h1>Gary Manuel</h1>

@if (@Model.Count == 0)
{
<h2>You have failed to add a Stylist</h2>
}
<ul>
  @foreach (var stylistname in Model)
  {
    <li><a href="/stylists/@stylistname.GetId()">@stylistname.GetName()</a> | <a href="/stylists/edit/@stylistname.GetId()">Edit</a> | <a href="/stylists/delete/@stylistname.GetId()">Delete</a></li>
  }
</ul>

<h1>Add your new favorite Stylist</h1>
<form action="/" method="post">
  <label for="stylist-name">Enter the next upcoming Stylist!</label>
  <input type="text" name="stylist-name">
  <button type="submit">Enter Info!</button>
</form>


<a href="/Stylist/clearAll">Fire Errybody!</a>
